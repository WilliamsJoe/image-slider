/* Keyframes */
@keyframes slideInRight 
  from 
    transform: translateX(-100%);
  to 
    transform: translateX(0);

@keyframes slideInLeft 
  from 
    transform: translateX(100%)
  to 
    transform: translateX(0)
    
@keyframes slideInDown 
  from 
    transform: translateY(-100%)
  
  to 
    transform: translateY(0)
  

@keyframes slideInUp 
  from 
    transform: translateY(100%)
  
  to 
    transform: translateY(0)
  